@model MovieMVCMVC.Models.MoviesModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this record?</h3>
<div>
    <table cellpadding="7" cellspacing="0">
            <tr>
                <th colspan="3" align="center">Delete process</th>
            </tr>
            <tr>
                <td>Title: </td>
                <td>
                    @Model.SingleMovie.Title
                </td>
            </tr>
            <tr>
                <td>ID </td>
                <td>
                    @Model.SingleMovie.MovieID
                </td>
            </tr>
            <tr>
                <td>Runtime: </td>
                <td>
                    @Model.SingleMovie.Runtime
                </td>
            </tr>
        </table>
    <div class=btn-group>
            <form asp-action="Delete" asp-route-id = "@Model.SingleMovie.MovieID">
                <input type="submit" value="Delete" class="btn btn-danger" />   
                <a class="btn btn-outline-primary" asp-action="Index">Or return to Movie List</a>
            </form>
     </div>
</div>
   